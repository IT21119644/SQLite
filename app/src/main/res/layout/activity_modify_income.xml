<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Modify_Income">

    <RelativeLayout
        android:id="@+id/interest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/purple_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/lightgrey"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="Modify Income" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/btnSearch"
            app:srcCompat="@drawable/ic_baseline_search_24" />

        <TextView
            android:id="@+id/date_m"
            android:layout_width="83dp"
            android:layout_height="39dp"
            android:layout_below="@+id/topAppBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="304dp"
            android:text="@string/date_m"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editDate"
            android:layout_width="253dp"
            android:layout_height="55dp"
            android:layout_below="@+id/date_m"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="110dp"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/category_m"
            android:layout_width="103dp"
            android:layout_height="53dp"
            android:layout_below="@+id/editDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="288dp"
            android:text="@string/category_m"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_category_m"
            android:layout_width="262dp"
            android:layout_height="64dp"
            android:layout_below="@+id/category_m"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="93dp"
            android:backgroundTint="#CA66DC"
            android:text="@string/btncategory"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/amount_m"
            android:layout_width="156dp"
            android:layout_height="55dp"
            android:layout_below="@+id/btn_category_m"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="241dp"
            android:text="@string/amounttxt"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/value_m"
            android:layout_width="170dp"
            android:layout_height="87dp"
            android:layout_below="@+id/amount_m"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="160dp"
            android:text="@string/amount"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/value_m"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="61dp"
            android:backgroundTint="#49B64D"
            android:text="@string/btnModiEx" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>