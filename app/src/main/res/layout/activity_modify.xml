<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Modify_Income">

    <RelativeLayout
        android:id="@+id/interest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/purple_background">

        <Button
            android:id="@+id/btnModiEx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="215dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="#49B64D"
            android:text="@string/btnModiEx" />

        <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/lightgrey"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="Modify Income" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/btnSearch"
            android:minHeight="48dp"
            android:background="@color/lightgrey"
            app:srcCompat="@drawable/ic_baseline_search_24" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topAppBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="345dp"
            android:text="@string/date_m"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category_m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-33dp"
            android:layout_marginEnd="167dp"
            android:text="@string/category_m"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amount_m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_m1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-31dp"
            android:layout_marginEnd="28dp"
            android:text="@string/amounttxt"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>